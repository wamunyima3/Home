<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/material_motion_duration_short_1"
    android:exitFadeDuration="@integer/material_motion_duration_long_1">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/purple_500"/>
            <gradient android:endColor="#03A9F4"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>